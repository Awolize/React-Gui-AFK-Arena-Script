{
    "name": "create-react-electron-app",
    "version": "0.1.0",
    "description": "A simple starter project to get up and developing quickly with the blend of React and Electron JS for building a Native Desktop App on various OS Platforms like Windows, Linux and macOS using Electron Builder.",
    "main": "electron/main.js",
    "author": "Souleh Shaikh <author.souleh@thegeekytutor.com>",
    "license": "MIT",
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/soulehshaikh99/create-react-electron-app"
    },
    "bugs": {
        "url": "https://github.com/soulehshaikh99/create-react-electron-app/issues"
    },
    "build": {
        "icon": "public/logo512.png",
        "productName": "React and Electron App",
        "files": [
            "build/**/*",
            "electron/main.js"
        ],
        "extraMetadata": {
            "main": "electron/main.js"
        },
        "win": {},
        "linux": {},
        "mac": {}
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "wait-on http://localhost:3000 && electron .",
        "electron-dev": "concurrently \"yarn run start\" \"yarn run electron\"",
        "preelectron-pack": "yarn run build",
        "electron-pack": "electron-builder"
    },
    "dependencies": {
        "@electron/remote": "^1.2.0",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.4.0",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "ansi_up": "^5.0.1",
        "bulma": "^0.9.3",
        "electron-serve": "^1.0.0",
        "electron-squirrel-startup": "^1.0.0",
        "html-react-parser": "^1.2.7",
        "node-schedule": "^2.0.0",
        "react-app-rewired": "^2.1.8",
        "react-tabs": "^3.2.2",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "concurrently": "^5.3.0",
        "electron": "^10.0.1",
        "electron-builder": "^22.8.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.3",
        "wait-on": "^5.2.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "keywords": [
        "cross-platform",
        "native-app",
        "installed-app",
        "desktop-applications",
        "windows",
        "linux",
        "macos",
        "html",
        "css",
        "javascript",
        "front-end",
        "declarative",
        "react",
        "react-dom",
        "react-scripts",
        "electron",
        "electron-builder",
        "electron-serve",
        "concurrently",
        "wait-on"
    ]
}
